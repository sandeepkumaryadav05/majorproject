<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-4">Edit Your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <!-- Title -->
      <div class="mb-3 mt-3">
        <label for="title" class="form-label">Title</label>
        <input 
          name="listing[title]" 
          id="title" 
          value="<%= listing.title %>" 
          class="form-control" 
          type="text" 
          required 
        />
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea 
          name="listing[description]" 
          id="description" 
          class="form-control" 
          required
        ><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description.</div>
      </div>

      <!-- Image URL -->
      <div class="mb-3">
        <label>Original Image</label>
        <br>
        <img 
          src="<%= listing.image.url %>" 
          style="width: 250px; height: 200px; object-fit: cover; border-radius: 5px; border: 1px solid #ddd; padding: 2px;" 
          alt="Original Image" 
        />
      </div>
      <div class="mb-3">
          <label for="image" class="form-label">Upload listing image</label>
          <input 
            name="listing[image][url]" 
            id="image" 
            class="form-control" 
            type="file" 
          />
        <div class="invalid-feedback">Please enter a valid image URL.</div>
      </div>

      <!-- Price and Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input 
            name="listing[price]" 
            id="price" 
            value="<%= listing.price %>" 
            class="form-control" 
            type="number" 
            required 
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input 
            name="listing[country]" 
            id="country" 
            value="<%= listing.country %>" 
            class="form-control" 
            type="text" 
            required 
          />
          <div class="invalid-feedback">Please provide a valid country.</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input 
          name="listing[location]" 
          id="location" 
          value="<%= listing.location %>" 
          class="form-control" 
          type="text" 
          required 
        />
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark edit-to-btn mt-3" type="submit">Edit</button>
    </form>
  </div>
</div>
